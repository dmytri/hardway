
function configetcd {
  scp conf/etcd.sh root@10.240.0.$1:
  ssh 10.240.0.$1 -l root <<EOF
yes | dnf install etcd
[ -f ~/etc.service.save ] || cp /usr/lib/systemd/system/etcd.service ~/etc.service.save
[ -d /etc/etcd ] || mkdir -p /etc/etcd
cp ca.pem kubernetes-key.pem kubernetes.pem /etc/etcd/
INTERNAL_IP='10.240.0.$1' bash ~/etcd.sh

sudo systemctl daemon-reload
sudo systemctl enable etcd
sudo systemctl start etcd
EOF

}

configetcd 11
configetcd 12
configetcd 13

